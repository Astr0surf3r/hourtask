<div class="container">

<p id="notice"><%= notice %></p>

<h1>Payments</h1> 

<table class="table">
  <thead>
    <tr>
      <th>Amount</th>
      <th>Currency</th>
      <th>Payment method</th>
      <th>Project Hours</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr >
        <td><%= format("%.2f", payment.amount) %></td>
        <td><%= payment.currency %></td>
        <td><%= payment.payment_method %></td>
        <td><%= retrieve_projects(payment) %></td>
        <td><%= payment.created_at.strftime('%d/%m/%Y') %></td>
        <td><%= link_to "<i class='fas fa-credit-card'></i>".html_safe, payment, class: "btn btn-success" %></td>
        <td><%= link_to "<i class='fas fa-pen'></i>".html_safe, edit_payment_path(payment), class: "btn btn-info" %></td>
        <td><%= link_to "<i class='fas fa-times'></i>".html_safe, payment, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h1><%= link_to 'New Payment', new_payment_path, class: "btn btn-info" %></h1>

</div>