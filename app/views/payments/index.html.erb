<div class="container">

<p id="notice"><%= notice %></p>

<h1>Payments</h1> 

<table class="table">
  <thead>
    <tr>
      <th>Amount</th>
      <th>Currency</th>
      <th>Payment method</th>
      <th>Project Hours</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= number_to_currency(payment.amount, unit: "MXN ") %></td>
        <td><%= payment.currency %></td>
        <td><%= payment.payment_method %></td>
        <td><%= retrieve_projects(payment) %></td>
        <td><%= link_to 'Show', payment %></td>
        <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Payment', new_payment_path %>

</div>