<div class="container">

<p id="notice"><%= notice %></p>

<h1>All Tasks</h1>

<table class="table">
  <thead>
    <tr>
      <th>Day</th>
      <th>Project</th>
      <th>Description</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.day %></td>
        <td><%= task.project.name %></td>
        <td><%= task.description %></td>
        <td><%= task.start_time.strftime('%I:%M:%p') %></td>
        <td><%= task.closed? ? task.end_time.strftime('%I:%M:%p') : "-" %></td>
        <td><%= task.closed? ? (link_to "Closed", "#", class: "btn btn-sm btn-success") : (link_to "Open", "#", class: "btn btn-sm btn-danger") %></td>
        <td><%#= link_to 'Show', task %></td>
        <td><%#= link_to 'Edit', edit_task_path(task) %></td>
        <td><%#= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Home', root_path, class: "btn btn-sm btn-success" %>