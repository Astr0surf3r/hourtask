<div class="container">

<p id="notice"><%= notice %></p>

<h1>Companies</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Projects</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td>
          <%= select("dynamic", "company_#{company.id}", company.projects.collect {|p| [ p.name, project_tasks_path(project_id: p.id) ] }, { prompt: true, include_blank: false }) %>
        </td>
        <td>
         
        </td>
        <td><%= link_to 'Show', company %></td>
        <td><%= link_to 'Edit', edit_company_path(company) %></td>
        <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% unless user_signed_in? %>
  <%= button_tag type: 'button', class: 'btn btn-primary', data: { toggle: 'modal', target: '#exampleModal' } do %>
    New Company
  <% end %>
  <%= render 'shared/dialog_unsigned' %>
<% else %>
  <%= link_to 'New Company', new_company_path, remote: true %>
<% end %>
</div>

<%= render 'dialog' %>