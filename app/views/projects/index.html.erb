<div class="container">

<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col">
    <h1>Projects</h1> 
  </div>
  <div class="col text-right">
    <%= link_to "<i class='fas fa-download'></i> .xls".html_safe, get_pdf_path, class: "btn btn-sm btn-success" %>
    <%= link_to "<i class='fas fa-download'></i> .pdf".html_safe, get_pdf_path, class: "btn btn-sm btn-danger" %>
  </div>
</div>

<table class="table">
  <thead>
    <tr>
      <!-- <th>Begin</th> -->
      <th>Name</th>
      <th>Hourly Rate</th>
      <th>Currency</th>
      <th>Hours Worked</th>
      <th>Hours Paid</th>
      <th>Hours UnPaid</th>
      <th>Company</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <!-- <td> <%#= Date.parse(project.created_at.to_s).strftime('%d/%m/%Y') %> </td> -->
        <td><%= link_to project.name, project_tasks_path(project) %></td>
        <td><%= number_to_currency(project.hourly_rate, unit: "$ ", separator: ",", delimiter: "")  %></td>
        <td><%= project.currency %></td>
        <td><%= calculate_project_hours_worked(project).round(2) %></td>
        <td><%= calculate_project_hours_paid(project).round(2) %></td>
        <td><%= (calculate_project_hours_worked(project)- calculate_project_hours_paid(project)).round(2) %></td>
        <td><%= project.company.nil? ? "-" : (link_to project.company.name, company_path(project.company)) %></td>
        <td><%= link_to 'Add Tasks', project_tasks_path(project) %></td>
        <td><%= link_to 'Edit', edit_project_path(project), remote: true %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Project', new_project_path, class: "btn btn-sm btn-success", remote: true %> | 

<%= link_to 'All Tasks', all_tasks_path, class: "btn btn-sm btn-warning" %>

</div>

<%= render "dialog" %>