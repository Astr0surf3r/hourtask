<%= form_with(model: project) do |form| %>
  <% if project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
        <% project.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %> <br />
    <%= form.text_field :name, required: true %>
  </div>
  
  <div class="field">
    <%= form.label :hourly_rate %> <br />
    <%= form.text_field :hourly_rate, required: true %>
  </div>
  
  <div class="field">
    <%= form.label :currency %> <br />
    <%= form.select :currency, ["MXN", "USD"] %>
  </div>
  
  <div class="field">
    <%= form.label :previous_hours_worked %> <br />
    <%= form.number_field :previous_hours_worked, step: :any %>
  </div>
  
  <div class="field">
    <%= form.label :previous_hours_paid %> <br />
    <%= form.number_field :previous_hours_paid, step: :any %>
  </div>

  <div class="field">
    <%= form.label :company_id %> <br />
    <%= form.select("company_id", Company.all.collect {|p| [ p.name, p.id ] }, { prompt: true }, required: true) %>
  </div> <br />
  

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
